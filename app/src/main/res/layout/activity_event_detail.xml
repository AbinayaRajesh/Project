<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sea_blue"
    tools:context="com.codepath.myapplication.Event.EventDetail">

    <ImageView
        android:id="@+id/ivEventImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvEventName"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        app:srcCompat="@color/nice_blue"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/tvEventName"
        android:gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:shadowColor="@color/cardview_dark_background"
        android:shadowDx="1"
        android:shadowDy="1"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMonth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/tvMonth"
        android:textColor="@color/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivEventImage"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/calender"
        android:layout_toRightOf="@+id/calender"
        android:paddingLeft="5dp"
        android:text="TextView"/>


    <ImageView
        android:id="@+id/calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_insert_invitation_black_24dp"
        android:layout_alignTop="@+id/tvMonth"
        android:tint="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <ImageButton
        android:id="@+id/add"
        android:background="@color/sea_blue"
        android:layout_width="32dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/add_white"/>


    <com.facebook.share.widget.ShareButton
        android:id="@+id/fb_share_button"
        android:layout_below="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="32dp"
        android:layout_alignParentRight="true"/>




</RelativeLayout>
    </ScrollView>
